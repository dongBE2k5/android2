<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Tiêu đề dịch vụ -->
        <TextView
            android:id="@+id/nameDichVu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Day Use - Classic Room"
            android:textColor="#2196F3"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Thông tin & Hotel Deals -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <!-- Thông tin 1 và 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/thongTin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Người lớn"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/thongTin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Không bao gồm bữa sáng"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Hotel Deals -->
            <TextView
                android:id="@+id/hotelDeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bghong"
                android:padding="6dp"
                android:text="HOTEL DEALS"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Giá -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/giaTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="264.550 VND"
                android:textColor="#F57C00"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tongGiaTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng giá 4.500.000 VND bao gồm thuế và phí"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Wifi + Phòng còn lại -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical">

            <!-- Icons bên trái -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_wifi_24"
                    card_view:tint="#388E3C" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/baseline_smoke_free_24"
                    card_view:tint="#388E3C" />
            </LinearLayout>

            <!-- Khoảng cách đẩy text ra phải -->
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Text bên phải -->
            <TextView
                android:id="@+id/phongConLai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉ còn 5 phòng"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Nút đặt -->
        <TextView
            android:id="@+id/btnDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bogoccam"
            android:padding="6dp"
            android:text="Đặt"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- Mã giảm giá -->
        <TextView
            android:id="@+id/maVoucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bghong"
            android:padding="8dp"
            android:text="Mã VNEPICTHANKYOU giảm đến 1 triệu"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
