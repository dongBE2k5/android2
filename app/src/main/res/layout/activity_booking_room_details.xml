<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/roomImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/khachsan"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/nameDichVu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Phòng"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/thongTin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả phòng"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/thongTin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin bổ sung"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/hotelDeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái phòng"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/giaTien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 VND/đêm"
            android:textColor="#F44336"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/phongConLai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng 2 người"
            android:textColor="#666666"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tongGiaTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng giá: 0 VND"
        android:textColor="#F44336"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnDat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800"
        android:textSize="16sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"/>

</LinearLayout>
