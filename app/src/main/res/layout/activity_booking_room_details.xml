<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0">


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4285F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
            <ImageView
                android:layout_marginTop="25dp"
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back"
                android:textSize="20sp"
                android:textStyle="bold"
                android:tint="@color/white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center">


                <TextView
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đặt Khách Sạn"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:contentDescription="Logo"
                    android:src="@drawable/logokhachsan"
                    android:tint="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.53"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>




        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">





        <ImageView
            android:id="@+id/roomImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/khachsan"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/nameDichVu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Phòng"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/thongTin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả phòng"
            android:textColor="#666666"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/thongTin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin bổ sung"
            android:textStyle="bold"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/hotelDeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái phòng"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/giaTien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 VND/đêm"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/phongConLai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng 2 người"
                android:textColor="#666666"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tongGiaTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng giá: 0 VND"
            android:textColor="#F44336"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800"
            android:textSize="16sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"/>


    </LinearLayout>


    <!-- Bottom Navigation View nằm ngoài hệ thống weight -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>


