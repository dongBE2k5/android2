<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Ảnh phòng -->
        <ImageView
            android:id="@+id/imgRoom"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:background="@android:color/darker_gray"
            android:contentDescription="Ảnh phòng" />

        <!-- Thông tin phòng -->
        <TextView
            android:id="@+id/tvRoomName"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng 402"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 600000đ"
            android:textSize="16sp"
            android:textColor="#E53935" />

        <TextView
            android:id="@+id/tvRoomCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sức chứa: 2 người"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRoomDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng đôi sang trọng"
            android:textSize="14sp"
            android:textColor="#757575" />

        <!-- Divider -->
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!-- Thông tin khách hàng -->
        <TextView
            android:id="@+id/tvCustomerId"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khách hàng: - Nguyen Van ABC"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvCheckInDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in: 2025-05-20"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCheckOutDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-out: 2025-05-21"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: CHƯA NHẬN PHÒNG"
            android:textStyle="italic"
            android:textColor="#FFA000"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
