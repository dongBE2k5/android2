                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Thông tin hành khách"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
