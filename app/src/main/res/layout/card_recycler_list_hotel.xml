<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imageThumb"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:src="@drawable/khachsan"
            android:clipToOutline="true"
            android:background="@drawable/rounded_top_right_corner" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/nameHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phòng Deluxe Có Tên Rất Dài Sẽ Tự Xuống Hàng"
                android:textColor="#1E1E1E"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="2" />

            <TextView
                android:id="@+id/statusHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Còn phòng"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <ImageView
                  android:id="@+id/imageView"
                  android:layout_width="20dp"
                  android:layout_height="25dp"
                  android:contentDescription="Logo"
                  android:src="@drawable/logokhachsan"/>
              <TextView
                  android:id="@+id/feedback"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="8.6/10"
                  android:textSize="12sp"
                  android:textColor="#757575"
                  android:layout_marginTop="4dp"
                  android:maxLines="1"
                  android:ellipsize="end" />

          </LinearLayout>
            <TextView
                android:id="@+id/descriptionHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Có view biển, 2 giường lớn"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>