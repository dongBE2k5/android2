<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:background="@android:color/white"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Ảnh -->
        <ImageView
            android:id="@+id/imageThumb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_co_present_24"
             />

        <!-- Nội dung văn bản -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/nameHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng Deluxe"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1E1E1E" />

            <TextView
                android:id="@+id/statusHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn phòng"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/descriptionHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có view biển, 2 giường lớn"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
